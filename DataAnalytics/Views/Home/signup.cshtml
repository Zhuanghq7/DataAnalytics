
@{
    ViewBag.Title = "Sign up";
    if (ViewBag.errmsg != null)
    {
        <script>
            alert("@ViewBag.errmsg");
        </script>
    }
    else if (ViewBag.register != null && ViewBag.register)
    {
        <script>
            alert("regist successfully");
            location.href = "/home/Portfolio";
        </script>
    }
}
<!DOCTYPE html>
<html class="login-bg">
<head>
    <title>Data Analytics - @ViewBag.Title</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- bootstrap -->
    <link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap-overrides.css" type="text/css" rel="stylesheet" />

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="~/Content/layout.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/elements.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/icons.css" />

    <!-- libraries -->
    <link rel="stylesheet" type="text/css" href="~/Content/lib/font-awesome.css" />

    <!-- this page specific styles -->
    <link rel="stylesheet" href="~/Content/compiled/signup.css" type="text/css" media="screen" />

    <!-- open sans font
    <link href='http://fonts.useso.com/css?family=Open+Sans:300italic,400italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css' /> -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <div class="header">
        <a href="Index">
            Data Analytics
        </a>
    </div>
    <div class="row-fluid login-wrapper">
        <div class="box">
            <div class="content-wrap">
                <h6>Sign Up</h6>
                <form method="post" action="#">
                    <input class="span12" type="text" name="username" placeholder="E-mail address" />
                    <input class="span12" type="password" name="password" placeholder="Password" />
                    <div class="action">
                        <input type="submit" class="btn-glow primary signup" value="Sign up" />
                    </div>
                </form>

            </div>
        </div>
        <div class="span4 already">
            <p>Already have an account?</p>
            <a href="Signin">Sign in</a>
        </div>
    </div>
   



    <!-- scripts -->
    <script src="~/Scripts/jquery-latest.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/theme.js"></script>

</body>
</html>